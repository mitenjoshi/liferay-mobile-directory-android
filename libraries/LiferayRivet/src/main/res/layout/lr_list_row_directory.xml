<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lr_list_row_directory_image"
        android:layout_width="@dimen/listview_image_size"
        android:layout_height="@dimen/listview_image_size"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/lr_list_row_directory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lr_black"
        android:textSize="18dp"
        android:paddingTop="4dp"
        android:includeFontPadding="false"
        android:layout_toRightOf="@id/lr_list_row_directory_image" />

    <TextView
        android:id="@+id/lr_list_row_directory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lr_black_45"
        android:textSize="14dp"
        android:includeFontPadding="false"
        android:text="Executive in charge of thing"
        android:layout_toRightOf="@id/lr_list_row_directory_image"
        android:layout_below="@id/lr_list_row_directory_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lr_list_row_directory_email"
        android:textColor="@color/belize_hole"
        android:textSize="12dp"
        android:text="email.email@emailthing.com"
        android:paddingBottom="4dp"
        android:layout_toRightOf="@id/lr_list_row_directory_image"
        android:layout_alignBottom="@id/lr_list_row_directory_image" />

    <ImageView
        android:id="@+id/lr_list_row_directory_icon_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lr_ic_phone"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/lr_list_row_directory_image"  />

    <ImageView
        android:id="@+id/lr_list_row_directory_icon_skype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lr_ic_skype_small"
        android:layout_alignBottom="@id/lr_list_row_directory_image"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/lr_list_row_directory_icon_phone" />

</RelativeLayout>