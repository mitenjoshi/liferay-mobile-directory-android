<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lr_list_row_directory_image"
        android:layout_width="@dimen/listview_image_size"
        android:layout_height="@dimen/listview_image_size"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="12dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/lr_list_row_directory_image">

        <TextView
            android:id="@+id/lr_list_row_directory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lr_black_70"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lr_list_row_directory_scren_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lr_black_40"
            android:textSize="14dp"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lr_list_row_directory_icon_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email_grey600_24dp"
            android:layout_marginRight="2dp" />

        <ImageView
            android:id="@+id/lr_list_row_directory_icon_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_grey600_24dp"
            android:layout_marginRight="2dp" />

        <ImageView
            android:id="@+id/lr_list_row_directory_icon_skype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_skype_24dp" />

    </LinearLayout>

</RelativeLayout>