<?xml version="1.0" encoding="utf-8"?>
<com.rivetlogic.mobilepeopledirectory.view.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userListRippleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"
    app:rv_centered="true"
    app:rv_rippleDuration="150"
    app:rv_zoom="true">

    <ImageView
        android:id="@+id/list_row_directory_image"
        android:layout_width="@dimen/listview_image_size"
        android:layout_height="@dimen/listview_image_size"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp" />

    <View
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_row_directory_image"
        android:layout_alignBottom="@id/list_row_directory_image"
        android:layout_alignParentRight="true"
        android:background="@drawable/drop_shadow_horizontal" />

    <ImageView
        android:id="@+id/list_row_directory_pointer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/list_pointer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_row_directory_image">

        <TextView
            android:id="@+id/list_row_directory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_70"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/list_row_directory_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_40"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_row_directory_icon_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email_grey600_24dp"
            android:layout_marginRight="2dp" />

        <ImageView
            android:id="@+id/list_row_directory_icon_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_grey600_24dp"
            android:layout_marginRight="2dp" />

        <ImageView
            android:id="@+id/list_row_directory_icon_skype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_skype_24dp" />

    </LinearLayout>


</com.rivetlogic.mobilepeopledirectory.view.RippleView>