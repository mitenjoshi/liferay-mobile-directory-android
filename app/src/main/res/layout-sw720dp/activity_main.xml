    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_weight=".45"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <FrameLayout
