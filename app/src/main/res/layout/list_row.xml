<?xml version="1.0" encoding="utf-8"?>
<com.rivetlogic.mobilepeopledirectory.view.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userListRippleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"
    app:rv_centered="true"
    app:rv_rippleDuration="150"
    app:rv_zoom="true">

    <ImageView
        android:id="@+id/list_row_directory_image"
        android:layout_width="@dimen/listview_image_size"
        android:layout_height="@dimen/listview_image_size"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_row_directory_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_row_directory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textColor="@color/black_70"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/list_row_directory_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_40"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_row_directory_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_row_directory_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_row_directory_icon_skype"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_skype_18dp" />

        <ImageView
            android:id="@+id/list_row_directory_icon_phone"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_call_grey600_18dp" />

        <ImageView
            android:id="@+id/list_row_directory_icon_email"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_email_grey600_18dp" />
    </LinearLayout>

</com.rivetlogic.mobilepeopledirectory.view.RippleView>