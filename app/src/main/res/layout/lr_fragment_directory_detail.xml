<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black_05"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/lr_fragment_directory_detail_image_container"
        android:layout_width="match_parent"
        android:layout_weight=".35"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/lr_fragment_directory_detail_image_background"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

        <com.rivetlogic.mobilepeopledirectory.component.CircularImageView
            android:id="@+id/lr_fragment_directory_detail_image"
            android:layout_width="wrap_content"
            app:border_width="2dp"
            app:border_color="@color/lr_white"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight=".65"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/lr_fragment_directory_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="29dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@color/black_70" />

        <TextView
            android:id="@+id/lr_fragment_directory_detail_screen_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black_40"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/lr_fragment_directory_detail_skype_button"
            android:background="@drawable/background_detail_fragment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lr_fragment_directory_detail_skype_icon"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skype_24dp" />

            <LinearLayout
                android:layout_toRightOf="@id/lr_fragment_directory_detail_skype_icon"
                android:id="@+id/lr_fragment_directory_detail_skype_info"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black_80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/skype" />

                <TextView
                    android:id="@+id/lr_fragment_directory_detail_skype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black_40" />

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:layout_alignLeft="@id/lr_fragment_directory_detail_skype_info"
                android:layout_alignParentTop="true"
                android:layout_marginRight="24dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lr_fragment_directory_detail_email_button"
            android:layout_above="@+id/lr_fragment_directory_detail_phone_button"
            android:background="@drawable/background_detail_fragment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lr_fragment_directory_detail_email_icon"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_grey600_24dp" />

            <LinearLayout
                android:layout_toRightOf="@id/lr_fragment_directory_detail_email_icon"
                android:id="@+id/lr_fragment_directory_detail_email_info"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black_80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/lr_fragment_directory_detail_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black_40" />

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:layout_alignLeft="@id/lr_fragment_directory_detail_email_info"
                android:layout_alignParentTop="true"
                android:layout_marginRight="24dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lr_fragment_directory_detail_phone_button"
            android:background="@drawable/background_detail_fragment_button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lr_fragment_directory_detail_phone_icon"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_grey600_24dp" />

            <LinearLayout
                android:layout_toRightOf="@id/lr_fragment_directory_detail_phone_icon"
                android:id="@+id/lr_fragment_directory_detail_phone_info"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black_80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/phone" />

                <TextView
                    android:id="@+id/lr_fragment_directory_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black_40" />

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:layout_alignLeft="@id/lr_fragment_directory_detail_phone_info"
                android:layout_alignParentTop="true"
                android:layout_marginRight="24dp" />

            <View
                style="@style/HorizontalDivider"
                android:layout_toRightOf="@id/lr_fragment_directory_detail_phone_icon"
                android:layout_alignBottom="@id/lr_fragment_directory_detail_phone_icon"
                android:layout_marginRight="24dp" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>